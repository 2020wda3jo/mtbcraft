<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mtbcraft.mapper.ReplyMapper">

	<insert id="insert">
		insert into reply(re_num, re_content, re_rider) values(#{re_num}, #{re_content}, #{re_rider})
	</insert>
	
	<select id="read" resultType="com.mtbcraft.dto.Reply">
		select * from reply where re_num=#{re_num}
	</select>
</mapper>

