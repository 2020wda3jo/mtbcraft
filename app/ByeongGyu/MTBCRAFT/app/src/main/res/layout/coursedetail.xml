<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="120dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/comp_mem_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal" />

                    <TextView
                        android:id="@+id/c_rider_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:includeFontPadding="false"
                        android:text="NAME"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/c_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:includeFontPadding="false"
                    android:text="C NAME"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/c_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:includeFontPadding="false"
                    android:text="C DATE"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="30dp" />

                <GridLayout
                    android:id="@+id/record_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:rowCount="3"
                    android:verticalSpacing="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center"
                            android:src="@drawable/riding_time"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="라이딩 시간"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/c_ride_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0시간 0분 0초"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp">

                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:src="@drawable/rest_time"
                            tools:layout_editor_absoluteX="131dp"
                            tools:layout_editor_absoluteY="407dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="휴식시간"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/c_rest_time"
                            android:text="0:0:0"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp">

                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:src="@drawable/riding_des"
                            tools:layout_editor_absoluteX="131dp"
                            tools:layout_editor_absoluteY="407dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="이동거리"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/c_dis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#000"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp">

                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:src="@drawable/max_speed"
                            tools:layout_editor_absoluteX="131dp"
                            tools:layout_editor_absoluteY="407dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="최대속도"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/c_ride_max"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="40dp">

                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:src="@drawable/avg_speed"
                            tools:layout_editor_absoluteX="131dp"
                            tools:layout_editor_absoluteY="407dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="평균속도"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/c_avg"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="40dp">
                        <ImageView
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:src="@drawable/godo"
                            tools:layout_editor_absoluteX="131dp"
                            tools:layout_editor_absoluteY="407dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="획득고도"
                            android:textSize="17dp"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/c_get"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="15dp"
                            android:textColor="#000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/like_push"
                            android:layout_width="74dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center"
                            android:src="@drawable/like_bt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="추천해요"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="17dp"/>

                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textSize="15dp"
                            android:textColor="#000"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>
                </GridLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="74dp"
                        android:layout_height="54dp"
                        android:src="@drawable/addr"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="주소"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/c_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="대한민국 대구광역시 북구 관문동"
                        android:textSize="20dp"
                        android:textColor="#000"/>
                </LinearLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:verticalSpacing="30dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/share_bt"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="35dp"
                            android:background="@drawable/share_bt"
                            tools:ignore="MissingConstraints" />

                        <Button
                            android:id="@+id/scrap_bt"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/scrap_bt"
                            tools:ignore="MissingConstraints" />

                        <Button
                            android:id="@+id/follow_bt"
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/follow_bt"
                            tools:ignore="MissingConstraints" />


                    </LinearLayout>

                </GridLayout>


            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>